apiVersion: tekton.dev/v1beta1
kind: PipelineRun
metadata:
  name: node-login-pipelinerun
spec:
  pipelineRef:
    name: build-and-deploy
  params:
  - name: deployment-name
    value: node-login
  - name: git-url
    value: https://github.com/sachinayyar/node-login.git
  - name: IMAGE
    value: quay.io/cicd-demo/node-login
  workspaces:
  - name: shared-workspace
    volumeClaimTemplate:
      spec:
        accessModes:
          - ReadWriteOnce
        resources:
          requests:
            storage: 500Mi
  workspaces:
  - name: shared-workspace
    secret:
      spec:
        accessModes:
          - ReadWriteOnce
        resources:
          -name: dockerconfigjson
